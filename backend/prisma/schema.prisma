generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Technology {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  image       String
  highlighted Boolean @default(false)

  @@map("technology")
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  images      String[]
  level       Int
  type        String
  highlighted Boolean  @default(false)
  repository  String

  @@map("project")
}
